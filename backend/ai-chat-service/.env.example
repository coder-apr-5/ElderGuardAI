# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ElderNest AI Chat Service Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server
NODE_ENV=development
PORT=5001
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI Provider Configuration
# Choose either Google Gemini OR OpenAI
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# AI Provider: "gemini" or "openai"
AI_PROVIDER=gemini

# Google Gemini API (Recommended - Free tier available)
# Get key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# OpenAI API (Alternative)
# Get key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# Model Settings
AI_MODEL=gemini-1.5-flash
AI_MAX_TOKENS=500
AI_TEMPERATURE=0.8

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Firebase Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour-private-key\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Chat Settings
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Max conversation history to maintain context
MAX_CONVERSATION_HISTORY=20

# Check-in intervals (in minutes)
LONELINESS_CHECK_INTERVAL=120
ROUTINE_REMINDER_ADVANCE=15

# Elder persona
COMPANION_NAME=Mira
