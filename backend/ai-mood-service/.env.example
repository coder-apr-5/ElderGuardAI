# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# ElderNest AI Mood Service Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Server Configuration
NODE_ENV=development
PORT=4000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# AI Provider Configuration
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Choose your AI provider: 'groq' or 'gemini'
AI_PROVIDER=groq

# Groq Configuration (fast inference, free tier available)
# Get your API key at: https://console.groq.com/keys
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama-3.3-70b-versatile

# Google Gemini Configuration (backup)
# Get your API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-pro

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Security & CORS
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:5000,http://localhost:5173,http://localhost:3000

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Risk Scoring Thresholds
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Risk level thresholds (0.0 - 1.0)
RISK_HIGH_THRESHOLD=0.7
RISK_MONITOR_THRESHOLD=0.4

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Rate Limiting
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Maximum requests per window
RATE_LIMIT_MAX=100
# Window size in minutes
RATE_LIMIT_WINDOW_MINUTES=15

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Logging
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Log level: error, warn, info, debug
LOG_LEVEL=info

# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━
# Conversation Context
# ━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━

# Maximum messages to keep in context
MAX_CONTEXT_MESSAGES=10
# Context expiry in hours
CONTEXT_EXPIRY_HOURS=24
